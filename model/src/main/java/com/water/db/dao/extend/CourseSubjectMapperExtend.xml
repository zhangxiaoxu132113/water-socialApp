<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.db.dao.extend.CourseSubjectMapperExtend">
    <!--扩展方法-->
    <select id="getAllCourseSubject" resultType="com.water.db.model.dto.CourseSubjectDto">
        SELECT * FROM course_subject
    </select>

    <select id="getCourseSubjectByExample" parameterType="java.util.Map" resultType="com.water.db.model.dto.CourseSubjectDto">
        SELECT * FROM course_subject WHERE 1=1
        <if test="courseName != ''">
            AND name = #{courseName}
        </if>
        <if test="partentId != ''">
            AND partentId = #{partentId}
        </if>
        <if test="id != ''">
            AND id = #{id}
        </if>
    </select>
</mapper>