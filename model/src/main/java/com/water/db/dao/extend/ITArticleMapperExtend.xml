<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.db.dao.extend.ITArticleMapperExtend">
    <!--扩展方法-->
    <select id="getArticle" parameterType="java.util.Map" resultType="com.water.db.model.ITArticle">
        SELECT * FROM it_article WHERE 1=1
        <if test="model != null">
            <if test="model.module >= 0">
                AND module = #{model.module}
            </if>
        </if>
        ORDER BY create_on DESC
        <if test="pageSize > 0 and begin >= 0">
            LIMIT #{begin},#{pageSize}
        </if>
    </select>
</mapper>