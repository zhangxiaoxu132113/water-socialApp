<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- 定时任务01：测试任务 -->
    <bean id="quartzJob01" class="com.water.quartz.TaskQuartz"/>
    <bean id="quartzJob02" class="com.water.quartz.WebSiteGeneratorTask"/>

    <!-- 定义调用对象和调用对象的方法 -->
    <bean id="jobTask01" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="quartzJob01"/>
        </property>
        <property name="targetMethod">
            <value>disposableUrlTask</value>
        </property>
    </bean>

    <!-- 抓取用户的微博内容 -->
    <bean id="jobTask02" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="quartzJob01"/>
        </property>
        <property name="targetMethod">
            <value>handleAccessLog</value>
        </property>
    </bean>

    <bean id="jobTask21" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="quartzJob02"/>
        </property>
        <property name="targetMethod">
            <value>geneatorWebSite</value>
        </property>
    </bean>

    <!-- 每分钟扫描待处理的单次任务 -->
    <bean id="jobRunTime01" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="jobTask01"/>
        </property>
        <property name="cronExpression">
            <value>0 50 19 6 * ?</value>
        </property>
    </bean>

    <!-- 每分钟扫描待处理的单次任务 -->
    <bean id="jobRunTime02" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="jobTask02"/>
        </property>
        <property name="cronExpression">
            <value>0 13 19 * * ?</value>
        </property>
    </bean>

    <bean id="jobRunTime21" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail">
            <ref bean="jobTask21"/>
        </property>
        <property name="cronExpression">
            <!--<value>0 50 16 * * ?</value>-->
            <value>0 0 0 */3 * ?</value>
        </property>
    </bean>

    <!-- 总管理类 如果将lazy-init='false'那么容器启动就会执行调度程序 -->
    <bean id="startQuertz" lazy-init="false"
          class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="jobRunTime01"/>
                <!--<ref bean="jobRunTime02"/>-->
                <ref bean="jobRunTime21"/>
            </list>
        </property>
    </bean>
</beans>